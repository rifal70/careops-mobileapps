<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.digimaster.digicourse.digicyber.com.digimaster.digicourse.digilearn.Activity.KonfirmasiActivity">

    <ImageView
        android:layout_width="76dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ceklis" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="PLEASE COMPLETE  YOUR PAYMENT"
        android:textColor="@color/black_87"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="BACK TO HOME"
        android:textColor="@color/cardview_light_background" />

    <RelativeLayout
        android:layout_width="339dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_outline">

        <TextView
            android:id="@+id/tvPlsTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="15dp"
            android:text="Please transfer to:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="54dp"
            android:text="Bank : "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtNamaBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView5"
            android:text="TextView"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNama_rek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvPlsTrans"
            android:layout_marginTop="92dp"
            android:text="PT DigiMaster Inovasi Cemerlang"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="96dp"
            android:text="Account Number  : "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNoRek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView9"
            android:text="XXX"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="18dp"
            android:text="Status  : "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="56dp"
            android:text="Amount Price :"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView11"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView11"
            android:text="Waiting Payment"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTotalTf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView4"
            android:text="TextView"
            android:textColor="@color/black_87"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:text="Payment can be done via ATM / Internet Banking / SMS Banking"
        android:textSize="12sp" />
</RelativeLayout>
