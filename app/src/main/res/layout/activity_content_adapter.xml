<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_root_mycourse_adapter"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/zxing_transparent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cd_my_course_adapter"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_cardview_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_cardview_color"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rvCourseAdap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_bab_my_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:gravity="center_horizontal|center"
                    android:text="Bab"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMateri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:gravity="center"
                    android:visibility="invisible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivDonCon"
                android:layout_width="29dp"
                android:layout_height="57dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/download" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>