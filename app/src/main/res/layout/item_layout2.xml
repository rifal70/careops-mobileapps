<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:elevation="60dp"
    app:cardCornerRadius="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card0"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_gravity="center"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/banlib">

            <ImageView
                android:id="@+id/ivTaskLibrary"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/asses"
                android:visibility="gone"/>


            <LinearLayout

                android:id="@+id/llItemLayout3"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">
            <!--                android:layout_weight="1"-->


                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"

                    android:layout_height="30sp"
                    android:layout_marginTop="2dp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratmedium"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:text="Course 1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/item_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="13sp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="1"
                    android:text="Created by"
                    android:textColor="@color/black_54"
                    android:textSize="9sp"
                    android:layout_marginTop="3dp"
                    android:textStyle="normal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_writer2"
                    android:layout_width="match_parent"
                    android:layout_height="13sp"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:text="PT.Digimaster inovasi Cemerlang"
                    android:layout_marginTop="4dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="9sp" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_height="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_module"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight=".15"
                        android:paddingLeft="5dp"
                        android:visibility="gone"
                        android:text="module |"
                        android:textAlignment="center"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_session"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight=".15"
                        android:paddingLeft="5dp"
                        android:visibility="gone"
                        android:text=" session |"
                        android:textAlignment="center"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_action"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight=".15"
                        android:paddingLeft="5dp"
                        android:visibility="gone"
                        android:text="action"
                        android:textAlignment="center"
                        android:textSize="10dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">


                <Button
                    android:fontFamily="@font/poppinslight"
                    android:id="@+id/btnBaca"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_button_biru"
                    android:text="Lihat Selengkapnya"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btnAssign"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3sp"
                    android:background="@drawable/rounded_button_color"
                    android:text="FEEDBACK"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="invisible" />


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
