<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rvRootActHis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.digimaster.digicourse.digicyber.Activity.HistoryActivity">

    <include
        android:id="@+id/includeDetTem"
        layout="@layout/app_bar_atasnya_doank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_load_history"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:src="@drawable/loading"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistory"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_below="@+id/includeDetTem"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>